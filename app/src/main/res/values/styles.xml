<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Appearance-->

    <style name="TextAppearance.Weather.Base" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Weather.DisplayMedium" parent="TextAppearance.Weather.Base">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Weather.BodyLarge" parent="TextAppearance.Weather.Base">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Weather.BodySmall" parent="TextAppearance.Weather.Base">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- CheckBox-->

    <style name="CheckBoxSelector" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="background">@color/transparent_blue</item>

        <!--Attr buttonTint change CheckBox border color -->
        <item name="buttonTint">@color/light_white</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="Widget.Weather.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>